<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".summary.SummaryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlSummary1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/summaryTitle"
            android:text="Match summary"
            android:gravity="center"
            android:textSize="27sp"
            android:padding="7dp"
            android:background="@color/primary_color"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llSummary1"
            android:background="@color/light_blue"
            android:layout_below="@+id/summaryTitle">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/summaryTeam1"
                android:text="CSK"
                android:textSize="27sp"
                android:padding="7dp"
                android:textColor="@color/primary_color"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/summaryTeam1Score"
                android:text="100/10"
                android:gravity="end"
                android:textSize="27sp"
                android:padding="7dp"
                android:textColor="@color/primary_color"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSummary1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llSummary1"
            android:padding="4dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlSummary2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rlSummary1">

        <LinearLayout
            android:id="@+id/llSummary2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/summaryTeam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="CSK"
                android:textColor="@color/primary_color"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/summaryTeam2Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="7dp"
                android:text="100/10"
                android:textColor="@color/primary_color"
                android:textSize="27sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSummary2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llSummary2"
            android:padding="4dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>